<h1>Cocktail: <%= @cocktail.name %></h1>

  <p>
   <strong>Ingredients:</strong>
   <ul>
     <% @cocktail.doses.each do |doses| %>
     <li><%= doses.description %> of <%= doses.ingredient.name %></li>
     <% end %>
   </ul>
 </p>


<%= link_to 'Edit', edit_cocktail_path(@cocktail) %> |
<%= link_to 'Main Menu', cocktails_path %>
<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %> |
<%= link_to 'Delete', dose_path, method: :delete, data: { confirm: 'Are you sure?' } %>


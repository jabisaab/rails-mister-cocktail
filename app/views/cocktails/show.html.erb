<div class="text-center">
  <h1><%= @cocktail.name %></h1>
  <p>
    <%= link_to edit_cocktail_path(@cocktail) do %>
    <i class="fa fa-pencil-square" aria-hidden="true"></i>
    <% end %> |
    <%= link_to cocktail_path, method: :delete, data: {confirm: 'Are you sure?'} do %> <i class="fa fa-trash-o" aria-hidden="true"></i>
    <% end %>
  </p>


  <% if @cocktail.photo? %>
  <%= cl_image_tag @cocktail.photo.path, width: 400, height: 300, crop: :fill %>
  <% else %>
  <%= cl_image_tag "default_photo", height: 300, width: 400, crop: :fit %>
  <% end %>

  <p>
    <br>
    <br>
    <strong>Ingredients <%= link_to new_cocktail_dose_path(@cocktail) do %>
      <i class="fa fa-plus-square" aria-hidden="true"></i>
      <% end %></strong>
      <ul>
        <% @cocktail.doses.each do |doses| %>
        <li class="list-unstyled"><%= doses.description %> of <%= doses.ingredient.name %>
         <%= link_to dose_path(doses), method: :delete do %>
         <i class="fa fa-minus-circle"></i>
         <% end %>
         <% end %>
       </li>
     </ul>
   </p>

 </div>



<div class="text-center">
  <h1>Cocktail: <%= @cocktail.name %></h1>

  <p>
   <strong>Ingredients:</strong>
   <ul>

     <% @cocktail.doses.each do |doses| %>
     <li class="list-unstyled"><%= doses.description %> of <%= doses.ingredient.name %>
       <%= link_to dose_path(doses), method: :delete do %>
       <i class="fa fa-trash"></i>
       <% end %>
       <% end %>
     </li>
   </ul>
 </p>

 <%= link_to 'Main Menu', cocktails_path %> |
 <%= link_to 'Edit', edit_cocktail_path(@cocktail) %> |
 <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %> |
 <%= link_to 'Delete Cocktail', cocktail_path, method: :delete, data: { confirm: 'Are you sure?' }%> |

</div>
